- @categories.each do |category|
  - category.items.first(1).each do |item|
    %section.items-box
      = link_to(purchase_items_path) do
        %figure.items-box-photo
          = image_tag "sample.jpg"
        .items-box-body
          .items-box-name
            = item.name
          .items-box-num
            .items-box-price
              = item.price
            .items-box-likes
              %span 100
              = fa_icon "heart"
            %p.item-box-tax
              (税込)
