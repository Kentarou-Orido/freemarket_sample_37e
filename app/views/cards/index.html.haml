.default-container
  = render partial: "/default/default-header"
  = render partial: "users/show/bread-crumbs"
  %main.l-container.clearfix
    = render partial: "users/show/mypage-side"
    .l-content
      %section.l-chapter-container
        %h2.l-chapter-head
          支払い方法
        .l-single-inner
          %section
            .l-single-content
              %h3.l-chapter-sub-head
                クレジットカード一覧
            %ul.settings-payment-list
          %section.settings-add-card
            .l-single-content
              = link_to new_user_card_path, class: "submit_button" do
                = fa_icon "credit-card", class: "fa-fw"
                クレジットカードを追加する
          .settings-not-regist
            = link_to "" do
              %span
                支払い方法について
              = fa_icon "angle-right", class: "fa-fw"

  = render partial: "/default/default-footer"
